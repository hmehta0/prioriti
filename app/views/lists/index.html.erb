<div class="page-header">
  <h1>
    Lists
    <a href="/lists/new" class="btn btn-lg btn-success">New List</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "lists_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :status_cont, "Status contains" %>
    <%= f.text_field :status_cont, :class => "form-control", :placeholder => "Status contains" %>
  </div>

<div class="form-group">
          <%= f.label :duedate, "Duedate" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='duedategteqPicker'>
                  <%= f.text_field :duedate_gteq, :class => "form-control", :placeholder => "Duedate greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='duedatelteqPicker'>
                  <%= f.text_field :duedate_lteq, :class => "form-control", :placeholder => "Duedate less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#duedategteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#duedatelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#duedategteqPicker').on("dp.change", function (e) {
                  $('#duedatelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#duedatelteqPicker').on("dp.change", function (e) {
                  $('#duedategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :prioriti_cont, "Prioriti contains" %>
    <%= f.text_field :prioriti_cont, :class => "form-control", :placeholder => "Prioriti contains" %>
  </div>

<div class="form-group">
    <%= f.label :category_cont, "Category contains" %>
    <%= f.text_field :category_cont, :class => "form-control", :placeholder => "Category contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :tasks_name_cont, "Task name contains" %>
      <%= f.text_field :tasks_name_cont, :class => "form-control", :placeholder => "Task name contains" %>
    </div>

<div class="form-group">
      <%= f.label :collaborators_email_cont, "User email contains" %>
      <%= f.text_field :collaborators_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/lists" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#lists_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Prioriti</th>
        <th>Duedate</th>
        <th>Status</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.category %></td>
        <td><%= list.prioriti %></td>
        <td><%= list.duedate %></td>
        <td><%= list.status %></td>
        <td>
          <% if list.user.present? %>
            <a href="/users/<%= list.user.id %>">
              <%= list.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/lists/<%= list.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == list.user %>
            <a href="/lists/<%= list.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_list/<%= list.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @lists, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
