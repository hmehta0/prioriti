<div class="page-header">
  <h3>Subtask #<%= @subtask.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @subtask.name %></dd>

      <dt>Prioriti</dt>
      <dd><%= @subtask.prioriti %></dd>

      <dt>Duedate</dt>
      <dd><%= @subtask.duedate %></dd>

      <dt>Status</dt>
      <dd><%= @subtask.status %></dd>

      <dt>Task</dt>
      <dd>
        <% if @subtask.task.present? %>
          <a href="/tasks/<%= @subtask.task_id %>">
            <%= @subtask.task.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/subtasks" class="btn btn-primary">
        Back
      </a>
      <a href="/subtasks/<%= @subtask.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_subtask/<%= @subtask.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
